<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="132dp">
    <com.google.android.gms.ads.nativead.NativeAdView
        android:id="@+id/native_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/bg_ffffff_8dp">
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/native_logo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:round="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#525050"
                android:text="Teamfight Tactics"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="@id/native_logo"
                app:layout_constraintLeft_toRightOf="@id/native_logo"
                app:layout_constraintRight_toLeftOf="@id/native_tag"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#80858585"
                android:text="Teamfight Tactics"
                android:layout_marginLeft="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/native_title"
                app:layout_constraintLeft_toRightOf="@id/native_logo"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/native_tag"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:src="@drawable/ad_tag"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/native_title"
                app:layout_constraintBottom_toBottomOf="@id/native_title"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/native_install"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_install_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.gms.ads.nativead.NativeAdView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/native_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ad_cover"
        android:scaleType="fitXY"/>
</RelativeLayout>